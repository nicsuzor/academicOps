  "style": "dark",
  "tags": ["claude-code", "debugging"],
  "templating": {
    "list": [
      {
        "name": "session_id",
        "type": "query",
        "label": "Session",
        "datasource": {"type": "loki", "uid": "loki"},
        "definition": "label_values({service_name=\"claude-code\"}, session_id)",
