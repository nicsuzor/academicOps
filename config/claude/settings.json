{
  "env": {
    "AOPS": "/Users/suzor/src/aOps"
  },
  "permissions": {
    "allow": [
      "Read"
    ],
    "deny": [
      "Write(/data/tasks/**)",
      "Write(*/data/tasks/**)",
      "Edit(/data/tasks/**)",
      "Edit(*/data/tasks/**)",
      "Bash(rm */data/tasks/**)",
      "Bash(mv */data/tasks/**)",
      "Bash(cp */data/tasks/**)",
      "Bash(git mv */data/tasks/**)",
      "Bash(git rm */data/tasks/**)",
      "Read(~/.claude/settings.json)",
      "Read(~/.claude/settings.local.json)",
      "Read(~/.claude/mcp.json)",
      "Read(~/.claude/.credentials.json)",
      "Read(~/.claude/hooks/**)",
      "Read(~/.claude/skills/**)",
      "Read(~/.claude/commands/**)",
      "Read(~/.claude/agents/**)",
      "Write(~/.claude/**)",
      "Edit(~/.claude/**)",
      "Bash(rm ~/.claude/**)",
      "Bash(mv ~/.claude/**)",
      "Bash(cp ~/.claude/**)",
      "Bash(touch ~/.claude/**)",
      "Bash(echo > ~/.claude/**)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${AOPS:-$CLAUDE_PROJECT_DIR}/hooks/session_env_setup.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/sessionstart_load_axioms.py",
            "timeout": 2000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/log_pretooluse.py",
            "timeout": 2000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/log_posttooluse.py",
            "timeout": 2000
          },
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/autocommit_state.py",
            "timeout": 35000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/log_userpromptsubmit.py",
            "timeout": 2000
          },
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/prompt_router.py",
            "timeout": 2000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/log_subagentstop.py",
            "timeout": 2000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=$AOPS uv run python $AOPS/hooks/verify_conclusions.py",
            "timeout": 30000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "host=$(hostname -s); if git rev-parse --git-dir >/dev/null 2>&1; then repo=$(basename \"$(git --no-optional-locks rev-parse --show-toplevel 2>/dev/null)\"); branch=$(git --no-optional-locks symbolic-ref --short HEAD 2>/dev/null || git --no-optional-locks rev-parse --short HEAD 2>/dev/null); printf '%s | %s | %s' \"$host\" \"$repo\" \"$branch\"; else printf '%s | %s' \"$host\" \"$(pwd)\"; fi"
  },
  "alwaysThinkingEnabled": false
}
