{
  "permissions": {
    "allow": [
      "Read",
      "Bash(uv run pytest:*)"
    ],
    "deny": [
      "Read(~/.claude/settings.json)",
      "Read(~/.claude/settings.local.json)",
      "Read(~/.claude/mcp.json)",
      "Read(~/.claude/.credentials.json)",
      "Write(~/.claude/settings.json)",
      "Write(~/.claude/settings.local.json)",
      "Write(~/.claude/mcp.json)",
      "Write(~/.claude/.credentials.json)",
      "Write(~/.claude/hooks/**)",
      "Write(~/.claude/skills/**)",
      "Write(~/.claude/commands/**)",
      "Write(~/.claude/agents/**)",
      "Edit(~/.claude/settings.json)",
      "Edit(~/.claude/settings.local.json)",
      "Edit(~/.claude/mcp.json)",
      "Edit(~/.claude/.credentials.json)",
      "Edit(~/.claude/hooks/**)",
      "Edit(~/.claude/skills/**)",
      "Edit(~/.claude/commands/**)",
      "Edit(~/.claude/agents/**)",
      "Bash(rm ~/.claude/settings*)",
      "Bash(rm ~/.claude/mcp.json)",
      "Bash(rm ~/.claude/.credentials.json)",
      "Bash(rm -rf ~/.claude/hooks)",
      "Bash(rm -rf ~/.claude/skills)",
      "Bash(rm -rf ~/.claude/commands)",
      "Bash(rm -rf ~/.claude/agents)",
      "Bash(mv ~/.claude/settings*)",
      "Bash(mv ~/.claude/mcp.json)",
      "Bash(mv ~/.claude/.credentials.json)",
      "Bash(mv ~/.claude/hooks)",
      "Bash(mv ~/.claude/skills)",
      "Bash(mv ~/.claude/commands)",
      "Bash(mv ~/.claude/agents)",
      "Read(.venv/**)",
      "Write(**/tja/records/**)",
      "Edit(**/tja/records/**)",
      "Write(**/tox/records/**)",
      "Edit(**/tox/records/**)",
      "Bash(rm **/tja/records/**)",
      "Bash(rm **/tox/records/**)",
      "Bash(mv **/tja/records/**)",
      "Bash(mv **/tox/records/**)",
      "Write(/tmp/claude-session/**)",
      "Edit(/tmp/claude-session/**)",
      "Bash(rm /tmp/claude-session/**)",
      "Bash(echo * > /tmp/claude-session/**)",
      "Bash(cat * > /tmp/claude-session/**)",
      "Read(**/data/tasks/*.json)",
      "Bash(cat **/data/tasks/*.json)",
      "Bash(jq * **/data/tasks/*.json)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "host=$(hostname -s); if git rev-parse --git-dir >/dev/null 2>&1; then repo=$(basename \"$(git --no-optional-locks rev-parse --show-toplevel 2>/dev/null)\"); branch=$(git --no-optional-locks symbolic-ref --short HEAD 2>/dev/null || git --no-optional-locks rev-parse --short HEAD 2>/dev/null); printf '%s | %s | %s' \"$host\" \"$repo\" \"$branch\"; else printf '%s | %s' \"$host\" \"$(pwd)\"; fi"
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true,
    "academicOps@inline": false,
    "canvas@claude-canvas": true,
    "aops-core@aops": true,
    "aops-tools@aops": true
  }
}
