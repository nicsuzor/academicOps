{
  "$comment": "Gemini CLI settings to merge into ~/.gemini/settings.json",
  "hooks": {
    "SessionStart": [{
      "matcher": "startup",
      "hooks": [{
        "name": "aops-sessionstart",
        "type": "command",
        "command": "PYTHONPATH=$AOPS python3 $AOPS/gemini/hooks/router.py SessionStart",
        "timeout": 15000
      }]
    }],
    "BeforeTool": [{
      "matcher": "*",
      "hooks": [{
        "name": "aops-beforetool",
        "type": "command",
        "command": "PYTHONPATH=$AOPS python3 $AOPS/gemini/hooks/router.py BeforeTool",
        "timeout": 5000
      }]
    }],
    "AfterTool": [{
      "matcher": "*",
      "hooks": [{
        "name": "aops-aftertool",
        "type": "command",
        "command": "PYTHONPATH=$AOPS python3 $AOPS/gemini/hooks/router.py AfterTool",
        "timeout": 55000
      }]
    }],
    "BeforeAgent": [{
      "matcher": "*",
      "hooks": [{
        "name": "aops-beforeagent",
        "type": "command",
        "command": "PYTHONPATH=$AOPS python3 $AOPS/gemini/hooks/router.py BeforeAgent",
        "timeout": 20000
      }]
    }],
    "AfterAgent": [{
      "matcher": "exit|logout",
      "hooks": [{
        "name": "aops-afteragent",
        "type": "command",
        "command": "PYTHONPATH=$AOPS python3 $AOPS/gemini/hooks/router.py AfterAgent",
        "timeout": 5000
      }]
    }]
  },
  "mcpServers": {
    "memory": {
      "type": "http",
      "url": "http://services.stoat-musical.ts.net:8026/mcp"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    }
  }
}
