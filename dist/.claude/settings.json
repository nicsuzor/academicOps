{
  "permissions": {
    "allow": [
      "Bash(uv run pytest:*)",
      "Bash(uv run python:*)",
      "mcp__gh__create_issue"
    ],
    "deny": [
      "Write(**/*.md)",
      "Write(**/*.env*)",
      "Read(**/*.cache/**)",
      "Write(./**/.venv/**)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .academicOps/scripts/load_instructions.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .academicOps/scripts/validate_tool.py",
            "timeout": 3000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .academicOps/scripts/validate_stop.py SubagentStop",
            "timeout": 2000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .academicOps/scripts/validate_stop.py Stop",
            "timeout": 2000
          }
        ]
      }
    ]
  }
}
