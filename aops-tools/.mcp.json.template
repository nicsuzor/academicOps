{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "outlook": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "fastmcp",
        "run",
        "http://nicwin.stoat-musical.ts.net:8023/mcp"
      ],
      "env": {}
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "task_manager": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${CLAUDE_PLUGIN_ROOT}/../aops-core",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "${CLAUDE_PLUGIN_ROOT}/..",
        "ACA_DATA": "/home/nic/writing/data"
      }
    }
  }
}
