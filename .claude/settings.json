{
  "version": "1.0",
  "settings": {
    "project_name": "nicbot",
    "permissions": {
      "file_access": {
        "policy": "allow_list",
        "paths": [
          "bot/agents/",
          "bot/.gemini/agents/",
          "bot/.claude/",
          "bot/docs/"
        ]
      },
      "shell_access": {
        "policy": "allow_list",
        "commands": [
          {
            "command": "gh",
            "args": ["issue"]
          }
        ]
      }
    }
  }
}
