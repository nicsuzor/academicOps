{
  "permissions": {
    "additionalDirectories": [
      "/home/nic/src/writing",
      "/home/nic/src/buttermilk",
      "/home/nic/src/MediaMarkets",
      "/home/nic/src/tja"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${env:ACADEMICOPS_BOT}/scripts/load_instructions.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${env:ACADEMICOPS_BOT}/scripts/validate_tool.py",
            "timeout": 3000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${env:ACADEMICOPS_BOT}/scripts/validate_stop.py SubagentStop",
            "timeout": 2000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${env:ACADEMICOPS_BOT}/scripts/validate_stop.py Stop",
            "timeout": 2000
          }
        ]
      }
    ]
  }
}
