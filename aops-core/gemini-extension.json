{
  "name": "aops-core",
  "version": "0.1.0",
  "description": "AcademicOps Core Framework Extension for Gemini CLI",
  "mcpServers": {
    "task_manager": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${AOPS}",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "${AOPS}",
        "ACA_DATA": "${ACA_DATA}"
      }
    }
  }
}