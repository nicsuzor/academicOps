{
  "name": "academic-ops-core",
  "version": "0.1.0",
  "description": "AcademicOps Core Framework Extension for Gemini CLI",
  "mcpServers": {
    "task_manager": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/home/nic/src/academicOps-gemini/aops-core",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "/home/nic/src/academicOps-gemini",
        "ACA_DATA": "/home/nic/writing/data"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "name": "aops-router",
            "type": "command",
            "command": "AOPS=/home/nic/src/academicOps-gemini AOPS_SESSIONS=/home/nic/src/academicOps-gemini/.gemini/sessions python3 /home/nic/src/academicOps-gemini/aops-core/hooks/gemini/router.py SessionStart",
            "timeout": 15000
          }
        ]
      }
    ],
    "BeforeAgent": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "aops-router",
            "type": "command",
            "command": "AOPS=/home/nic/src/academicOps-gemini AOPS_SESSIONS=/home/nic/src/academicOps-gemini/.gemini/sessions python3 /home/nic/src/academicOps-gemini/aops-core/hooks/gemini/router.py BeforeAgent",
            "timeout": 20000
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "aops-router",
            "type": "command",
            "command": "AOPS=/home/nic/src/academicOps-gemini AOPS_SESSIONS=/home/nic/src/academicOps-gemini/.gemini/sessions python3 /home/nic/src/academicOps-gemini/aops-core/hooks/gemini/router.py BeforeTool",
            "timeout": 5000
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "*",
        "hooks": [
          {
            "name": "aops-router",
            "type": "command",
            "command": "AOPS=/home/nic/src/academicOps-gemini AOPS_SESSIONS=/home/nic/src/academicOps-gemini/.gemini/sessions python3 /home/nic/src/academicOps-gemini/aops-core/hooks/gemini/router.py AfterTool",
            "timeout": 55000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "exit|logout",
        "hooks": [
          {
            "name": "aops-router",
            "type": "command",
            "command": "AOPS=/home/nic/src/academicOps-gemini AOPS_SESSIONS=/home/nic/src/academicOps-gemini/.gemini/sessions python3 /home/nic/src/academicOps-gemini/aops-core/hooks/gemini/router.py SessionEnd",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}