{
  "name": "aops-core",
  "version": "0.1.0",
  "description": "AcademicOps Core Framework Extension for Gemini CLI",
  "hooks": {
    "SessionStart": "uv run --directory ${AOPS} python aops-core/hooks/router.py SessionStart",
    "BeforeAgent": "uv run --directory ${AOPS} python aops-core/hooks/router.py BeforeAgent",
    "BeforeTool": "uv run --directory ${AOPS} python aops-core/hooks/router.py BeforeTool",
    "AfterTool": "uv run --directory ${AOPS} python aops-core/hooks/router.py AfterTool",
    "AfterAgent": "uv run --directory ${AOPS} python aops-core/hooks/router.py AfterAgent",
    "SessionEnd": "uv run --directory ${AOPS} python aops-core/hooks/router.py SessionEnd"
  },
  "mcpServers": {
    "task_manager": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${AOPS}",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "${AOPS}",
        "ACA_DATA": "${ACA_DATA}"
      }
    }
  }
}