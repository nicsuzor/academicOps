{
  "name": "aops-core",
  "version": "0.1.0",
  "description": "AcademicOps Core Framework Extension for Gemini CLI",
  "mcpServers": {
    "task_manager": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/home/nic/.aops/main/aops-core",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "/home/nic/.aops/main",
        "ACA_DATA": "/home/nic/writing/data"
      }
    },
    "memory": {
      "url": "http://services.stoat-musical.ts.net:8026/mcp",
      "headers": {
        "Authorization": "Bearer 07f203bcc6fbe9a410d9850336f8ff9c73a64c3d0e7802e3450ce39b139f5d67"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${AOPS} python ${extensionPath}/hooks/router.py --client gemini",
            "timeout": 15000
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${AOPS} python ${extensionPath}/hooks/router.py --client gemini",
            "timeout": 5000
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${AOPS} python ${extensionPath}/hooks/router.py --client gemini",
            "timeout": 5000
          }
        ]
      }
    ],
    "BeforeAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${AOPS} python ${extensionPath}/hooks/router.py --client gemini",
            "timeout": 5000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${AOPS} python ${extensionPath}/hooks/router.py --client gemini",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}