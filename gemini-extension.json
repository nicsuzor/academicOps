{
  "name": "aops-core",
  "version": "0.1.14",
  "description": "AcademicOps Framework Extension for Gemini CLI - skills, agents, hooks, and tools for research workflow automation",
  "contextFileName": "GEMINI.md",
  "mcpServers": {
    "task_manager": {
      "command": "env",
      "args": [
        "-u",
        "VIRTUAL_ENV",
        "uv",
        "run",
        "--directory",
        "${extensionPath}",
        "python",
        "mcp_servers${/}tasks_server.py"
      ],
      "env": {
        "ACA_DATA": "${ACA_DATA}"
      }
    }
  }
}
